{
  "name": "paastis",
  "version": "0.1.0",
  "description": "An HTTP-proxy/gateway that automatically pause and restart Scalingo apps in case of inactivity ",
  "bin": {
    "paastis": "./bin/index.js",
    "@paastis/paastis": "./bin/index.js"
  },
  "main": "src/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:down": "sequelize-cli db:migrate:undo",
    "format:check": "prettier --check './**/*.{js,ts}'",
    "format:write": "prettier --write './**/*.{js,ts}'",
    "start": "npm run db:migrate && node src/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules ./node_modules/.bin/jest"
  },
  "author": "J. Buget <contact@jbuget.fr>",
  "license": "AGPL-3.0",
  "dependencies": {
    "@clevercloud/client": "^11.0.1",
    "babel-register": "^6.26.0",
    "bluebird": "^3.7.2",
    "dotenv": "^17.2.2",
    "heroku-client": "^3.1.0",
    "http-proxy": "^1.18.1",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "node-cron": "^3.0.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "pino": "^9.9.1",
    "redis": "^5.8.2",
    "scalingo": "^0.14.6",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "yargs": "^18.0.0"
  },
  "type": "module",
  "engines": {
    "node": "22",
    "npm": "10"
  },
  "devDependencies": {
    "jest": "^30.1.3",
    "prettier": "3.6.2"
  },
  "files": [
    "src/*",
    "sample.env",
    "paastis.yml.sample"
  ]
}
